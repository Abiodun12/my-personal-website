# DashScope API
DASHSCOPE_API_KEY=your_dashscope_key_here

# DeepSeek AI
DEEPSEEK_API_KEY=your_deepseek_key_here

# Flask
FLASK_SECRET_KEY=your_secret_key_here
FLASK_DEBUG=false

# Shared secret between Next.js and Flask for /api/analyze
SMART_PET_SHARED_SECRET=your_smart_pet_shared_secret_here

# Admin secret to protect setup/test routes in production
ADMIN_API_SECRET=your_admin_secret_here

# Override Smart Pet API endpoint (optional, dev convenience)
# Example: use Render API during local dev
# SMART_PET_API_URL=https://my-personal-website-t7tw.onrender.com/api/analyze

# CORS/Origin allowlist (comma-separated). Include prod domain(s) and dev.
# Example: https://your-site.vercel.app,https://your-custom-domain.com,http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000

# Image size limit for uploads and remote image checks (bytes)
MAX_IMAGE_BYTES=5242880

# Public base URL for your Render API (used by client keep-alive)
# Example: https://my-personal-website-t7tw.onrender.com
NEXT_PUBLIC_RENDER_API_URL=
